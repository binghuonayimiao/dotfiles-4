# ============================================================================= #
#  ➜ ➜ ➜ LOCAL
# ============================================================================= #
zplug "$HOME/$DOTFILES/zsh/plugins", from:local
# ============================================================================= #
#  ➜ ➜ ➜ PROFILES
# ============================================================================= #
source "$HOME/$DOTFILES/zsh/config/profile/p10k.profile.zsh"
#source "$HOME/$DOTFILES/zsh/config/profile/spaceship.profile.zsh"
#source "$HOME/$DOTFILES/zsh/config/profile/ohmyzsh.profile.zsh"
#source "$HOME/$DOTFILES/zsh/config/profile/local.profile.zsh"
# ============================================================================= #
#  ➜ ➜ ➜ INSTALL ZPLUG & LOAD
# ============================================================================= #
if ! zplug check --verbose; then
    zplug install
fi
zplug load
# ============================================================================= #
#  ➜ ➜ ➜ LOCAL CONFIGS
# ============================================================================= #
[ -f ~/.localrc ] && source ~/.localrc ## Load local environment variables
[ -f ~/.config/fzf/key-bindings.zsh ] && source ~/.config/fzf/key-bindings.zsh
[ -f ~/.config/fzf/completion.zsh ] && source ~/.config/fzf/completion.zsh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh